# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=your_webhook_url_here

# Database Configuration
DATABASE_URL=sqlite:////home/ubuntu/telegram_face_swap_bot/database/app.db

# Face Swap Service Configuration
FACE_SWAP_SERVICE_URL=http://localhost:8080
FACE_SWAP_API_KEY=your_face_swap_api_key_here

# File Storage Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE_MB=50

# Payment Configuration
TELEGRAM_STARS_RATE=0.7  # Credits per star (100 stars = 70 credits)
UPI_RATE=0.39  # Credits per rupee (59 rupees = 23 credits)

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# System Configuration
FREE_CREDITS_ON_REGISTRATION=1
CREDITS_PER_INVITE=1
MAX_DAILY_JOBS_PER_USER=10
INVITE_EXPIRY_DAYS=30

# Development Configuration
DEBUG=True
FLASK_ENV=development

